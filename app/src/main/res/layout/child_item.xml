<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/expandableListChild">

    <TextView
        android:id="@+id/txt_genNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:text="# of Generators: 0"/>

    <TextView
        android:id="@+id/txt_genRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:text="Generation Rate: 0.0"/>

    <TextView
        android:id="@+id/txt_genCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="25dp"
        android:text="Cost Per Generator: 0"/>

    <LinearLayout
        android:layout_alignBottom="@id/txt_genCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_x1"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:textSize="10sp"
            android:text="x1" />

        <Button
            android:id="@+id/btn_x10"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:textSize="10sp"
            android:text="x10" />

        <Button
            android:id="@+id/btn_x25"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:textSize="10sp"
            android:text="x25"
            />

    </LinearLayout>

</LinearLayout>