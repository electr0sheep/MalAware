<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">


    <include layout="@layout/content_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/action_buttons_top"
            android:layout_above="@+id/action_buttons_bottom">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_alignParentStart="true"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/fab"
                android:layout_alignBaseline="@+id/fab"
                android:id="@+id/txt_fab"
                android:visibility="gone"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:visibility="gone"
                android:layout_toRightOf="@+id/fab"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/fab2"
                android:layout_alignBaseline="@+id/fab2"
                android:id="@+id/txt_fab_2"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/action_buttons_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_action_skill_auto_tap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/auto_tap"
                android:visibility="gone"
                android:onClick="fabAutoTapOnClick"
                android:layout_alignParentStart="true"
                android:elevation="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:layout_alignEnd="@+id/fab_action_skill_auto_tap"
                android:layout_alignBottom="@+id/fab_action_skill_auto_tap"
                android:layout_alignTop="@+id/fab_action_skill_auto_tap"
                android:layout_alignStart="@+id/fab_action_skill_auto_tap"
                android:layout_alignBaseline="@+id/fab_action_skill_auto_tap"
                android:id="@+id/txt_action_skill_auto_tap"
                android:elevation="1000dp"
                android:visibility="gone"
                android:gravity="center"
                android:includeFontPadding="false"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_action_skill_increase_generation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/ic_add_white_48dp"
                android:visibility="gone"
                android:onClick="fabResourceGenerationIncreaseOnClick"
                android:layout_toRightOf="@+id/fab_action_skill_auto_tap"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:layout_alignEnd="@+id/fab_action_skill_increase_generation"
                android:layout_alignBottom="@+id/fab_action_skill_increase_generation"
                android:layout_alignTop="@+id/fab_action_skill_increase_generation"
                android:layout_alignStart="@+id/fab_action_skill_increase_generation"
                android:layout_alignBaseline="@+id/fab_action_skill_increase_generation"
                android:id="@+id/txt_action_skill_increase_generation"
                android:visibility="gone"
                android:elevation="1000dp"
                android:gravity="center"
                android:includeFontPadding="false"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_action_skill_time_warp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/time_warp"
                android:visibility="gone"
                android:onClick="fabTimeWarpOnClick"
                android:layout_toRightOf="@id/fab_action_skill_increase_generation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/fab_action_skill_time_warp"
                android:layout_alignBaseline="@+id/fab_action_skill_time_warp"
                android:id="@+id/txt_fab_action_skill_time_warp"
                android:visibility="gone"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
